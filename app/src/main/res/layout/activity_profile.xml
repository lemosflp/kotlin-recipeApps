<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/cream"
    android:padding="16dp"
    android:id="@+id/main"
    tools:context=".MainActivity">


    <!-- Botão para voltar -->
    <Button
        android:id="@+id/button_to_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/yellow"
        android:text="Voltar" />

    <!-- Espaçamento -->
    <Space
        android:layout_width="match_parent"
        android:layout_height="20dp" />

    <!-- Imagem do usuário (PIC) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <!-- Foto principal -->
        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:src="@drawable/baseline_person_24"
            android:scaleType="centerCrop"
            android:background="@drawable/circle_shape"
            android:contentDescription="Foto do Usuário" />
    </LinearLayout>

    <!-- Galeria de imagens do usuário -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="16dp">



    </LinearLayout>

    <!-- Frase de boas-vindas -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Olá, usuário1"
        android:textSize="20sp"
        android:layout_gravity="center"
        android:textColor="@android:color/black"
        android:layout_marginTop="16dp" />

    <!-- Título 'Favoritos' -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Favoritos"
        android:textSize="18sp"
        android:layout_marginTop="20dp"
        android:textStyle="bold" />

    <!-- Caixa de favoritos -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/custom_edittext"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Layout da Receita -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/custom_edittext"
            android:orientation="horizontal"
            android:padding="16dp">

            <!-- Imagem da Receita -->
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:contentDescription="Imagem da Receita"
                android:src="@drawable/croissant" />

            <!-- Conteúdo da Receita -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="10dp">

                <!-- Nome da Receita -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Croissant"
                    android:textColor="@color/brown"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <!-- Breve descrição -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="4dp"
                    android:text="Um delicioso croissant francês"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <!-- Botão para acessar a receita -->
                <Button
                    android:id="@+id/button_profile_recipe"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="Acessar receita"
                    android:backgroundTint="@color/yellow" />
            </LinearLayout>

            <!-- Coração para favoritar -->
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:contentDescription="Favoritar"
                android:src="@drawable/baseline_favorite_24" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
