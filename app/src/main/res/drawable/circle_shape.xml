<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="oval">

    <!-- Defina a cor de fundo do círculo -->
    <solid android:color="@android:color/white" />

    <!-- Defina a borda (stroke) do círculo -->
    <stroke
        android:width="2dp"
        android:color="@android:color/black" />

    <!-- Margens internas opcional -->
    <padding
        android:left="4dp"
        android:top="4dp"
        android:right="4dp"
        android:bottom="4dp" />
</shape>
